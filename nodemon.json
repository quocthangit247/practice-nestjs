{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "ts": "node -r ts-node/register -r tsconfig-paths/register -r dotenv/config"
  },
  "watch": ["src/", "./config.yml", "./.env"],
  "env": {
    "NODE_ENV": "development",
    "DOTENV_CONFIG_PATH": "./.env"
  },
  "ext": "js,json,ts"
}
